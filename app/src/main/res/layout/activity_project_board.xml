<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- ===== MAIN CONTENT ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- ── Top App Bar ── -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/background_light"
            android:paddingHorizontal="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:src="@drawable/ic_chevron_left"
                app:tint="@color/slate_900"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvProjectTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website Redesign"
                android:textColor="@color/slate_900"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageButton
                    android:id="@+id/btnSearch"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Search"
                    android:src="@drawable/ic_search"
                    app:tint="@color/slate_700" />

                <ImageButton
                    android:id="@+id/btnFilter"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Filter"
                    android:src="@drawable/ic_filter"
                    app:tint="@color/slate_700" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ── Column tabs (To Do / Doing / Done) ── -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingHorizontal="16dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- To Do tab (active) -->
                <LinearLayout
                    android:id="@+id/tabToDo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingEnd="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To Do"
                        android:textColor="@color/slate_900"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- Count badge -->
                    <TextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/bg_avatar_extra"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/slate_700"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Doing tab -->
                <LinearLayout
                    android:id="@+id/tabDoing"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingEnd="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Doing"
                        android:textColor="@color/slate_400"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/bg_avatar_extra"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/slate_500"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- Done tab -->
                <LinearLayout
                    android:id="@+id/tabDone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Done"
                        android:textColor="@color/slate_400"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/bg_avatar_extra"
                        android:gravity="center"
                        android:text="7"
                        android:textColor="@color/slate_500"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Active-tab underline indicator -->
        <View
            android:layout_width="52dp"
            android:layout_height="3dp"
            android:layout_marginStart="16dp"
            android:background="@color/primary" />

        <!-- Thin divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/slate_200" />

        <!-- ── Scrollable card list ── -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="96dp"
            android:scrollbars="none"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- ════════════════════════════════
                     CARD 1 – Hero card (with preview image)
                     ════════════════════════════════ -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardHero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Mock preview image -->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:background="@color/slate_100">

                            <!-- Simulated spreadsheet rows -->
                            <include
                                layout="@layout/view_mock_preview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <!-- Gradient scrim over image bottom -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:layout_gravity="bottom"
                                android:background="@drawable/bg_scrim_bottom" />

                            <!-- Badges overlaid on image -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|start"
                                android:layout_marginStart="14dp"
                                android:layout_marginBottom="48dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_badge_red"
                                    android:paddingHorizontal="10dp"
                                    android:paddingVertical="4dp"
                                    android:text="High Priority"
                                    android:textColor="#DC2626"
                                    android:textSize="11sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:background="@drawable/bg_badge_blue"
                                    android:paddingHorizontal="10dp"
                                    android:paddingVertical="4dp"
                                    android:text="Design"
                                    android:textColor="#0369A1"
                                    android:textSize="11sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </FrameLayout>

                        <!-- Card body below image -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="14dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="14dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Design Home Page Hero"
                                android:textColor="@color/slate_900"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <!-- Date + avatars row -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_calendar"
                                    app:tint="@color/slate_400"
                                    android:contentDescription="date" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="6dp"
                                    android:text="Tomorrow"
                                    android:textColor="@color/slate_500"
                                    android:textSize="12sp" />

                                <!-- Stacked avatars -->
                                <FrameLayout
                                    android:layout_width="54dp"
                                    android:layout_height="28dp">

                                    <TextView
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_marginStart="0dp"
                                        android:background="@drawable/bg_avatar_orange"
                                        android:gravity="center"
                                        android:text="A"
                                        android:textColor="#92400E"
                                        android:textSize="11sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_marginStart="20dp"
                                        android:background="@drawable/bg_avatar_stacked"
                                        android:gravity="center"
                                        android:text="B"
                                        android:textColor="#1D4ED8"
                                        android:textSize="11sp"
                                        android:textStyle="bold" />
                                </FrameLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- ════════════════════════════════
                     CARD 2 – Competitor Analysis Report
                     ════════════════════════════════ -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAnalysis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp">

                        <!-- Badge + overflow row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_badge_orange"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="4dp"
                                android:text="Medium"
                                android:textColor="#C2410C"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <ImageButton
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="More options"
                                android:src="@drawable/ic_more_vert"
                                app:tint="@color/slate_400" />
                        </LinearLayout>

                        <!-- Title -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Competitor Analysis Report"
                            android:textColor="@color/slate_900"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <!-- Description -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Review top 5 competitors in the fintech space and identify key UX patterns."
                            android:textColor="@color/slate_500"
                            android:textSize="13sp"
                            android:lineSpacingMultiplier="1.4" />

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="12dp"
                            android:background="@color/slate_100" />

                        <!-- Date + avatar row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_calendar"
                                android:contentDescription="date"
                                app:tint="@color/slate_400" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="6dp"
                                android:text="Oct 24"
                                android:textColor="@color/slate_500"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/bg_avatar_orange"
                                android:gravity="center"
                                android:text="C"
                                android:textColor="#92400E"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- ════════════════════════════════
                     CARD 3 – Update Icon Set
                     ════════════════════════════════ -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardIconSet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp">

                        <!-- Badges row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_badge_blue"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="4dp"
                                android:text="Low"
                                android:textColor="#0369A1"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:background="@drawable/bg_badge_purple"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="4dp"
                                android:text="Research"
                                android:textColor="#7C3AED"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Title -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Update Icon Set"
                            android:textColor="@color/slate_900"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="12dp"
                            android:background="@color/slate_100" />

                        <!-- Date + +2 avatars row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_calendar"
                                android:contentDescription="date"
                                app:tint="@color/slate_400" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="6dp"
                                android:text="Oct 28"
                                android:textColor="@color/slate_500"
                                android:textSize="12sp" />

                            <!-- +2 pill -->
                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/bg_avatar_extra"
                                android:gravity="center"
                                android:text="+2"
                                android:textColor="@color/slate_600"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

        <!-- ── Bottom Navigation Bar ── -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/bg_bottom_nav"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Home -->
            <LinearLayout
                android:id="@+id/navHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_home"
                    android:contentDescription="Home"
                    app:tint="@color/slate_400" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Home"
                    android:textColor="@color/slate_400"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Tasks (active) -->
            <LinearLayout
                android:id="@+id/navTasks"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_task_alt"
                    android:contentDescription="Tasks"
                    app:tint="@color/primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Tasks"
                    android:textColor="@color/primary"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- AI Chat -->
            <LinearLayout
                android:id="@+id/navAiChat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Badge container -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_chat"
                        android:contentDescription="AI Chat"
                        app:tint="@color/slate_400" />

                    <!-- Red notification dot -->
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="top|end"
                        android:background="@drawable/bg_circle_primary"
                        android:backgroundTint="#EF4444" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="AI Chat"
                    android:textColor="@color/slate_400"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Settings -->
            <LinearLayout
                android:id="@+id/navSettings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_settings"
                    android:contentDescription="Settings"
                    app:tint="@color/slate_400" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Settings"
                    android:textColor="@color/slate_400"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- ── FAB ── -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="80dp"
        android:contentDescription="Add task"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/primary"
        app:tint="@color/white"
        app:elevation="6dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

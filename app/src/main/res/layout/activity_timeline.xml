<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:orientation="vertical">

    <!-- ══════════════════════════════════
         TOP APP BAR
         ══════════════════════════════════ -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:paddingHorizontal="16dp"
        android:paddingTop="0dp"
        android:paddingBottom="8dp"
        android:background="@color/background_light">

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Menu"
            android:src="@drawable/ic_menu"
            app:tint="@color/slate_900"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tvProjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website Redesign"
                android:textColor="@color/slate_900"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="October 2023"
                android:textColor="@color/slate_500"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnCalendar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Calendar"
            android:src="@drawable/ic_calendar"
            app:tint="@color/slate_700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ══════════════════════════════════
         VIEW TOGGLE ROW  (Day / Week / Month | filter | AI)
         ══════════════════════════════════ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <!-- Day (active) -->
        <TextView
            android:id="@+id/tabDay"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:background="@drawable/bg_tab_active"
            android:gravity="center"
            android:paddingHorizontal="18dp"
            android:text="Day"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />

        <!-- Week -->
        <TextView
            android:id="@+id/tabWeek"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_tab_inactive"
            android:gravity="center"
            android:paddingHorizontal="18dp"
            android:text="Week"
            android:textColor="@color/slate_600"
            android:textSize="13sp" />

        <!-- Month -->
        <TextView
            android:id="@+id/tabMonth"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_tab_inactive"
            android:gravity="center"
            android:paddingHorizontal="18dp"
            android:text="Month"
            android:textColor="@color/slate_600"
            android:textSize="13sp" />

        <!-- Vertical divider -->
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="12dp"
            android:background="@color/slate_300" />

        <!-- Filter icon button -->
        <FrameLayout
            android:id="@+id/btnFilter"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_tab_icon">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:contentDescription="Filter"
                android:src="@drawable/ic_filter"
                app:tint="@color/slate_600" />
        </FrameLayout>

        <!-- AI sparkle icon button -->
        <FrameLayout
            android:id="@+id/btnAI"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_tab_icon">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:contentDescription="AI Optimize"
                android:src="@drawable/ic_lightbulb"
                app:tint="@color/primary" />
        </FrameLayout>

    </LinearLayout>

    <!-- ══════════════════════════════════
         GANTT GRID  (fills remaining height above bottom bar)
         ══════════════════════════════════ -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <!-- Fixed-width inner frame: label col + 4 day columns -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- ── LEFT: task label column ── -->
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Header spacer (aligns with date row) -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/background_light" />

                <!-- Section: DESIGN PHASE -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/slate_50"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:text="DESIGN PHASE"
                    android:textColor="@color/slate_500"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.08" />

                <!-- Wireframing row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="6dp"
                    android:background="@color/background_light">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wireframing"
                        android:textColor="@color/slate_900"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="2 days"
                        android:textColor="@color/slate_500"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- Row divider -->
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/slate_100" />

                <!-- UI Kit row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="6dp"
                    android:background="@color/background_light">

                    <!-- Title with sparkle badge -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UI Kit ✨"
                            android:textColor="@color/slate_900"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="2 days • AI Optimized"
                        android:textColor="@color/slate_500"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- Row divider -->
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/slate_100" />

                <!-- Section: DEVELOPMENT -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/slate_50"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:text="DEVELOPMENT"
                    android:textColor="@color/slate_500"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.08" />

                <!-- Repo Setup row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="6dp"
                    android:background="@color/background_light">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Repo Setup"
                        android:textColor="@color/slate_900"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="1 day"
                        android:textColor="@color/slate_500"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- Row divider -->
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/slate_100" />

                <!-- API Design row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="6dp"
                    android:background="@color/background_light">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="API Design"
                        android:textColor="@color/slate_900"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="3 days"
                        android:textColor="@color/slate_500"
                        android:textSize="11sp" />
                </LinearLayout>

            </LinearLayout>

            <!-- ── RIGHT: timeline / Gantt columns ── -->
            <!-- Each day column = 80dp wide -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- ── DAY COL: MON 12 ── -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Date header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@color/background_light">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MON"
                            android:textColor="@color/slate_500"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.06" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textColor="@color/slate_800"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- DESIGN PHASE section spacer -->
                    <View android:layout_width="match_parent" android:layout_height="40dp" android:background="@color/slate_50" />

                    <!-- Wireframing cell – empty (bar starts at TUE) -->
                    <View android:layout_width="match_parent" android:layout_height="72dp"
                        android:background="@color/background_light" />
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/slate_100" />

                    <!-- UI Kit cell – empty -->
                    <View android:layout_width="match_parent" android:layout_height="80dp"
                        android:background="@color/background_light" />
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/slate_100" />

                    <!-- DEVELOPMENT section spacer -->
                    <View android:layout_width="match_parent" android:layout_height="40dp" android:background="@color/slate_50" />

                    <!-- Repo Setup cell -->
                    <View android:layout_width="match_parent" android:layout_height="72dp"
                        android:background="@color/background_light" />
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/slate_100" />

                    <!-- API Design cell -->
                    <View android:layout_width="match_parent" android:layout_height="72dp"
                        android:background="@color/background_light" />
                </LinearLayout>

                <!-- ── DAY COL: TUE 13 (TODAY) ── -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Date header – today highlighted -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@color/background_light">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TUE"
                            android:textColor="@color/primary"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.06" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13"
                            android:textColor="@color/primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- DESIGN PHASE section spacer -->
                    <View android:layout_width="match_parent" android:layout_height="40dp" android:background="@color/slate_50" />

                    <!-- Wireframing bar cell -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:background="@color/background_light">

                        <!-- Blue Gantt bar -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="-2dp"
                            app:cardBackgroundColor="@color/primary"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingHorizontal="8dp">

                                <!-- Grid icon -->
                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/ic_task_alt"
                                    android:contentDescription="task"
                                    app:tint="@color/white" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="5dp"
                                    android:text="Wireframing"
                                    android:textColor="@color/white"
                                    android:textSize="11sp"
                                    android:textStyle="bold"
                                    android:singleLine="true" />

                                <!-- Avatar on bar -->
                                <TextView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:background="@drawable/bg_avatar_orange_bordered"
                                    android:gravity="center"
                                    android:text="A"
                                    android:textColor="#92400E"
                                    android:textSize="9sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/slate_100" />

                    <!-- UI Kit cell (empty – bar starts at WED) -->
                    <View android:layout_width="match_parent" android:layout_height="80dp"
                        android:background="@color/background_light" />
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/slate_100" />

                    <!-- DEVELOPMENT section spacer -->
                    <View android:layout_width="match_parent" android:layout_height="40dp" android:background="@color/slate_50" />

                    <!-- Repo Setup cell – empty -->
                    <View android:layout_width="match_parent" android:layout_height="72dp"
                        android:background="@color/background_light" />
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/slate_100" />

                    <!-- API Design cell – empty -->
                    <View android:layout_width="match_parent" android:layout_height="72dp"
                        android:background="@color/background_light" />
                </LinearLayout>

                <!-- ── DAY COL: WED 14 ── -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Date header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@color/background_light">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WED"
                            android:textColor="@color/slate_500"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.06" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14"
                            android:textColor="@color/slate_800"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- DESIGN PHASE section spacer -->
                    <View android:layout_width="match_parent" android:layout_height="40dp" android:background="@color/slate_50" />

                    <!-- Wireframing bar continues (end) -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:background="@color/background_light">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="-4dp"
                            android:background="@color/primary"
                            android:alpha="0.25" />
                    </FrameLayout>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/slate_100" />

                    <!-- UI Kit bar starts here (purple) -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@color/background_light">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="-2dp"
                            app:cardBackgroundColor="#7C3AED"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingHorizontal="8dp">

                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/ic_lightbulb"
                                    android:contentDescription="ai"
                                    app:tint="@color/white" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="5dp"
                                    android:text="UI Kit Cr…"
                                    android:textColor="@color/white"
                                    android:textSize="11sp"
                                    android:textStyle="bold"
                                    android:singleLine="true" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/slate_100" />

                    <!-- DEVELOPMENT section spacer -->
                    <View android:layout_width="match_parent" android:layout_height="40dp" android:background="@color/slate_50" />

                    <!-- Repo Setup cell – empty -->
                    <View android:layout_width="match_parent" android:layout_height="72dp"
                        android:background="@color/background_light" />
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/slate_100" />

                    <!-- API Design cell – empty -->
                    <View android:layout_width="match_parent" android:layout_height="72dp"
                        android:background="@color/background_light" />
                </LinearLayout>

                <!-- ── DAY COL: THU 15 ── -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Date header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@color/background_light">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="THU"
                            android:textColor="@color/slate_500"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.06" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15"
                            android:textColor="@color/slate_800"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- DESIGN PHASE section spacer -->
                    <View android:layout_width="match_parent" android:layout_height="40dp" android:background="@color/slate_50" />

                    <!-- Wireframing – empty -->
                    <View android:layout_width="match_parent" android:layout_height="72dp" android:background="@color/background_light" />
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/slate_100" />

                    <!-- UI Kit bar continues -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@color/background_light">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="-4dp"
                            android:background="#7C3AED"
                            android:alpha="0.25" />
                    </FrameLayout>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/slate_100" />

                    <!-- DEVELOPMENT section spacer -->
                    <View android:layout_width="match_parent" android:layout_height="40dp" android:background="@color/slate_50" />

                    <!-- Repo Setup cell – empty -->
                    <View android:layout_width="match_parent" android:layout_height="72dp" android:background="@color/background_light" />
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/slate_100" />

                    <!-- API Design cell – empty -->
                    <View android:layout_width="match_parent" android:layout_height="72dp" android:background="@color/background_light" />
                </LinearLayout>

            </LinearLayout>
            <!-- End timeline columns -->

        </LinearLayout>
    </HorizontalScrollView>

    <!-- "Today" vertical dashed line overlay is achieved via a custom view drawn in code -->

    <!-- ══════════════════════════════════
         BOTTOM BAR  (stacked avatars  +  New Task button)
         ══════════════════════════════════ -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <!-- Stacked avatars -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="38dp">

            <!-- Avatar 1 -->
            <TextView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginStart="0dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_avatar_orange_bordered"
                android:gravity="center"
                android:text="A"
                android:textColor="#92400E"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Avatar 2 -->
            <TextView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginStart="24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_avatar_grey_bordered"
                android:gravity="center"
                android:text="B"
                android:textColor="@color/slate_600"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Avatar 3 -->
            <TextView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginStart="48dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_avatar_green_bordered"
                android:gravity="center"
                android:text="C"
                android:textColor="#166534"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- +2 count -->
            <TextView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginStart="72dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_avatar_extra"
                android:gravity="center"
                android:text="+2"
                android:textColor="@color/slate_600"
                android:textSize="11sp"
                android:textStyle="bold" />
        </FrameLayout>

        <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" />

        <!-- New Task button -->
        <Button
            android:id="@+id/btnNewTask"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:backgroundTint="@color/primary"
            android:drawableStart="@drawable/ic_add"
            android:drawablePadding="6dp"
            android:paddingHorizontal="20dp"
            android:text="New Task"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="22dp" />

    </LinearLayout>

</LinearLayout>
